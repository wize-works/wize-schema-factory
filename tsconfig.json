{
    "compilerOptions": {
        "target": "ES2022",
        "module": "ESNext",
        "outDir": "./bin",
        "rootDir": "./src",
        "esModuleInterop": true,
        "moduleResolution": "node",
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "declaration": false
    },
    "include": [
        "src/**/*"
    ]
}