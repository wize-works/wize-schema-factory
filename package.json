{
    "name": "@wizeworks/wize-schema-factory",
    "private": false,
    "version": "1.1.0",
    "license": "MIT",
    "author": "WizeWorks",
    "readmeFilename": "README.md",
    "type": "module",
    "main": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "exports": {
        ".": {
            "import": "./dist/index.js",
            "types": "./dist/index.d.ts"
        }
    },
    "keywords": [
        "graphql",
        "cli",
        "codegen",
        "wizeworks"
    ],
    "description": "CLI to generate GraphQL queries/mutations/subscriptions from Wize APIs.",
    "homepage": "https://github.com/wize-works/wize-schema-factory#readme",
    "bugs": {
        "url": "https://github.com/wize-works/wize-schema-factory/issues"
    },
    "scripts": {
        "build": "tsup",
        "start": "node ./dist/index.js",
        "dev": "ts-node --esm ./src/index.ts",
        "format": "prettier --write \"src/**/*.ts\"",
        "lint": "tsc --noEmit",
        "semantic-release": "semantic-release",
        "clean": "rm -rf dist graphql"
    },
    "publishConfig": {
        "access": "public"
    },
    "bin": {
        "wize-schema-factory": "./bin/index.js"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/wize-works/wize-schema-factory.git"
    },
    "dependencies": {
        "@graphql-codegen/cli": "^5.0.5",
        "@graphql-codegen/typescript": "^4.1.6",
        "@graphql-codegen/typescript-operations": "^4.6.0",
        "chalk": "^5.4.1",
        "commander": "^11.1.0",
        "cross-fetch": "^4.1.0",
        "execa": "^9.5.2",
        "js-yaml": "^4.1.0",
        "mkdirp": "^3.0.1",
        "prompts": "^2.4.2"
    },
    "devDependencies": {
        "@graphql-codegen/typescript-urql": "^4.0.0",
        "@semantic-release/git": "^10.0.0",
        "@semantic-release/github": "^10.0.0",
        "@semantic-release/npm": "^11.0.0",
        "@types/js-yaml": "^4.0.9",
        "@types/node": "^22.15.3",
        "@types/prompts": "^2.4.9",
        "dotenv": "^16.5.0",
        "semantic-release": "^22.0.0",
        "tsup": "^8.0.2",
        "typescript": "^5.4.0"
    }
}
